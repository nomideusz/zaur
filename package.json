{
	"name": "zaur",
	"version": "0.0.1",
	"scripts": {
    "init-db": "node scripts/init-sqlite.js",
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"db:check": "tsx src/lib/server/check-db.ts",
		"db:check-news": "tsx src/lib/server/check-news.ts",
		"db:check-all": "tsx src/lib/server/check-rethinkdb-data.js",
		"db:create-indexes": "tsx src/lib/server/create-indexes.ts",
		"db:verify-migration": "tsx src/lib/server/verify-db-sync.ts",
		"db:cleanup-json": "tsx src/lib/server/cleanup-json-files.ts",
		"db:init": "tsx scripts/init-db.js",
		"db:populate": "tsx scripts/populate-db.js",
		"db:setup": "node scripts/setup.js",
		"news:update": "node scripts/update-news-rss-sqlite.js",
    "news:update-sample": "node scripts/update-news-sqlite.js",
		"news:schedule": "tsx scripts/schedule-news-updates.js",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/forms": "^0.5.9",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@types/node-schedule": "^2.1.7",
		"@types/xml2js": "^0.4.14",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"tsx": "^4.19.3",
		"typescript": "^5.0.0",
		"vite": "^6.2.5"
	},
	"keywords": [
		"svelte"
	],
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	},
	"packageManager": "pnpm@9.15.3+sha512.1f79bc245a66eb0b07c5d4d83131240774642caaa86ef7d0434ab47c0d16f66b04e21e0c086eb61e62c77efc4d7f7ec071afad3796af64892fae66509173893a",
	"dependencies": {
		"@types/rethinkdb": "^2.3.21",
		"better-sqlite3": "^11.10.0",
		"node-schedule": "^2.1.1",
		"rethinkdb": "^2.4.2",
		"rethinkdb-ts": "^2.7.0",
		"rss-parser": "^3.13.0",
		"runed": "^0.25.0",
		"sqlite3": "^5.1.7",
		"xml2js": "^0.6.2"
	}
}
